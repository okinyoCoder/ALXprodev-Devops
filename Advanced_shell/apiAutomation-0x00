#!/bin/bash

# API endpoint for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Check if the request was successful (HTTP status 200)
if [ "$(cat status_code.txt)" -ne 200 ]; then
    echo "Error fetching data for Pikachu. HTTP status: $(cat status_code.txt)" >> "$ERROR_FILE"
    rm -f "$OUTPUT_FILE"
fi

# Clean up
rm -f status_code.txt