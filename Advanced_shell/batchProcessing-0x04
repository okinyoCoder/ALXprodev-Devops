#!/bin/bash
# batchProcessing-0x04
# Parallel Pokémon data fetcher

# Directory for output
DATA_DIR="pokemon_data"
mkdir -p "$DATA_DIR"

# Pokémon list
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# API base
BASE_URL="https://pokeapi.co/api/v2/pokemon"

# Error log
ERROR_LOG="errors.txt"
> "$ERROR_LOG"  # Clear previous errors

# Function to fetch a Pokémon's data
fetch_pokemon() {
    local name="$1"
    echo "Fetching data for $name..."

    local attempt=1
    local success=false

    while [ $attempt -le 3 ]; do
        status=$(curl -s -o "$DATA_DIR/$name.json" -w "%{http_code}" "$BASE_URL/$name")
        if [ "$status" -eq 200 ]; then
            echo "Saved data to $DATA_DIR/$name.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt failed for $name (HTTP $status)"
            ((attempt++))
            sleep 1
        fi
    done

    if [ "$success" = false ]; then
        echo "Failed to fetch data for $name after 3 attempts" >> "$ERROR_LOG"
        rm -f "$DATA_DIR/$name.json"
    fi
}

# Launch all fetches in parallel
for pokemon in "${POKEMONS[@]}"; do
    fetch_pokemon "$pokemon" &
done

# Wait for all background jobs
wait

echo "All fetch operations completed. Check $ERROR_LOG for any failures."
